<Window x:Class="CVTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CVTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Drop="Window_Drop" AllowDrop="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="405*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="listBoxFileNames" MinWidth="200" Background="#FFFFFFFF" SelectionChanged="ListBoxFileNames_SelectionChanged" Grid.Row="1" Grid.Column="0"/>
        <TextBlock x:Name="textBlock" Grid.Column="2" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock"/>
        <DockPanel Grid.Column="1" Grid.Row="1" Background="#FFAAAAAA" >
            <Image x:Name="image"/>
        </DockPanel>


    </Grid>
</Window>
